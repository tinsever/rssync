{% extends 'layout/base.twig' %}

{% block title %}{{ list.name }} - {{ app_name }}{% endblock %}

{% block content %}
<div class="page-header">
    <div class="row valign-wrapper" style="margin-bottom: 0;">
        <div class="col s12 m8">
            <h4>{{ list.name }}</h4>
            <p class="grey-text">
                <a href="#filter-modal" class="blue-text text-darken-2 modal-trigger" style="text-decoration: underline; text-decoration-style: dotted; cursor: pointer;">
                    {{ list.sources.count }} Quellen
                </a>
            </p>
        </div>
        <div class="col s12 m4 right-align">
            <a href="{{ url_for('public.list.rss', {slug: list.slug}) }}" class="btn waves-effect waves-light orange" target="_blank">
                <i class="material-icons left">rss_feed</i>RSS abonnieren
            </a>
            <button class="btn-flat waves-effect copy-url" data-url="{{ url_for('public.list.rss', {slug: list.slug}) }}" title="RSS-URL kopieren">
                <i class="material-icons">content_copy</i>
            </button>
        </div>
    </div>
</div>

{% if items is empty %}
    <div class="card">
        <div class="card-content">
            <p class="grey-text">
                Keine Artikel in dieser Liste. Die Quellen müssen erst aktualisiert werden.
            </p>
        </div>
    </div>
{% else %}
    <div class="card">
        <div class="card-content" style="padding: 0;">
            {% for item in items %}
            <div class="feed-item">
                <a href="{{ item.link }}" target="_blank" class="feed-title">{{ item.title }}</a>
                <div class="feed-meta">
                    <span class="blue-text">{{ item.source.name }}</span>
                    {% if item.author %}
                        &bull; {{ item.author }}
                    {% endif %}
                    &bull; {{ item.pub_date|date('d.m.Y H:i') }}
                    {% if item.categories %}
                        <br>
                        {% for cat in item.getCategoriesArray() %}
                            <span class="chip" style="font-size: 0.75rem; height: auto; line-height: 1.5;">{{ cat }}</span>
                        {% endfor %}
                    {% endif %}
                </div>
                {% if item.content %}
                <div class="feed-excerpt">
                    {{ item.content|striptags|slice(0, 300) }}{% if item.content|length > 300 %}...{% endif %}
                </div>
                {% endif %}
            </div>
            {% endfor %}
        </div>
    </div>
{% endif %}

<div class="center-align" style="margin-top: 2rem;">
    <a href="{{ url_for('public.lists') }}" class="btn-flat waves-effect">
        <i class="material-icons left">arrow_back</i>Alle Listen
    </a>
</div>

<!-- Filter Modal -->
<div id="filter-modal" class="modal modal-fixed-footer">
    <div class="modal-content">
        <h4>
            <i class="material-icons left blue-text">filter_list</i>
            Filterregeln für "{{ list.name }}"
        </h4>
        <p class="grey-text">Diese Liste verwendet die folgenden Filterregeln für die Quellen:</p>
        
        {% if list.sources is empty %}
            <div class="card-panel orange lighten-4">
                <p class="orange-text text-darken-4">
                    <i class="material-icons tiny">info</i>
                    Diese Liste enthält noch keine Quellen.
                </p>
            </div>
        {% else %}
            {% for source in list.sources %}
                {% set pivot = source.pivot %}
                {% set hasFilters = pivot.author_whitelist or pivot.author_blacklist or pivot.category_whitelist or pivot.category_blacklist %}
                
                <div class="card" style="margin-top: 1rem;">
                    <div class="card-content">
                        <span class="card-title">
                            <i class="material-icons left blue-text">rss_feed</i>
                            {{ source.name }}
                        </span>
                        
                        {% if not hasFilters %}
                            <p class="grey-text">
                                <i class="material-icons tiny">check_circle</i>
                                Keine Filter aktiviert - alle Artikel werden angezeigt
                            </p>
                        {% else %}
                            <div class="row" style="margin-top: 1rem;">
                                {% if pivot.author_whitelist %}
                                    <div class="col s12 m6" style="margin-bottom: 1rem;">
                                        <strong class="green-text text-darken-2">
                                            <i class="material-icons tiny">check_circle</i>
                                            Autoren (nur diese):
                                        </strong>
                                        <div style="margin-top: 0.5rem;">
                                            {% set authorWhitelist = pivot.author_whitelist|split(',') %}
                                            {% for author in authorWhitelist %}
                                                <span class="chip green lighten-4" style="margin: 0.25rem 0.25rem 0.25rem 0;">
                                                    {{ author|trim }}
                                                </span>
                                            {% endfor %}
                                        </div>
                                        <p class="helper-text grey-text" style="font-size: 0.85rem; margin-top: 0.5rem;">
                                            Nur Artikel dieser Autoren werden angezeigt
                                        </p>
                                    </div>
                                {% endif %}
                                
                                {% if pivot.author_blacklist %}
                                    <div class="col s12 m6" style="margin-bottom: 1rem;">
                                        <strong class="red-text text-darken-2">
                                            <i class="material-icons tiny">block</i>
                                            Autoren (ausgeschlossen):
                                        </strong>
                                        <div style="margin-top: 0.5rem;">
                                            {% set authorBlacklist = pivot.author_blacklist|split(',') %}
                                            {% for author in authorBlacklist %}
                                                <span class="chip red lighten-4" style="margin: 0.25rem 0.25rem 0.25rem 0;">
                                                    {{ author|trim }}
                                                </span>
                                            {% endfor %}
                                        </div>
                                        <p class="helper-text grey-text" style="font-size: 0.85rem; margin-top: 0.5rem;">
                                            Artikel dieser Autoren werden ausgeblendet
                                        </p>
                                    </div>
                                {% endif %}
                                
                                {% if pivot.category_whitelist %}
                                    <div class="col s12 m6" style="margin-bottom: 1rem;">
                                        <strong class="green-text text-darken-2">
                                            <i class="material-icons tiny">check_circle</i>
                                            Kategorien (nur diese):
                                        </strong>
                                        <div style="margin-top: 0.5rem;">
                                            {% set categoryWhitelist = pivot.category_whitelist|split(',') %}
                                            {% for category in categoryWhitelist %}
                                                <span class="chip green lighten-4" style="margin: 0.25rem 0.25rem 0.25rem 0;">
                                                    {{ category|trim }}
                                                </span>
                                            {% endfor %}
                                        </div>
                                        <p class="helper-text grey-text" style="font-size: 0.85rem; margin-top: 0.5rem;">
                                            Nur Artikel mit diesen Tags werden angezeigt
                                        </p>
                                    </div>
                                {% endif %}
                                
                                {% if pivot.category_blacklist %}
                                    <div class="col s12 m6" style="margin-bottom: 1rem;">
                                        <strong class="red-text text-darken-2">
                                            <i class="material-icons tiny">block</i>
                                            Kategorien (ausgeschlossen):
                                        </strong>
                                        <div style="margin-top: 0.5rem;">
                                            {% set categoryBlacklist = pivot.category_blacklist|split(',') %}
                                            {% for category in categoryBlacklist %}
                                                <span class="chip red lighten-4" style="margin: 0.25rem 0.25rem 0.25rem 0;">
                                                    {{ category|trim }}
                                                </span>
                                            {% endfor %}
                                        </div>
                                        <p class="helper-text grey-text" style="font-size: 0.85rem; margin-top: 0.5rem;">
                                            Artikel mit diesen Tags werden ausgeblendet
                                        </p>
                                    </div>
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-close btn waves-effect waves-light blue">
            <i class="material-icons left">close</i>Schließen
        </a>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize modals
    const modalElems = document.querySelectorAll('.modal');
    M.Modal.init(modalElems);
    
    // Copy URL functionality
    document.querySelectorAll('.copy-url').forEach(btn => {
        btn.addEventListener('click', function() {
            const url = window.location.origin + this.dataset.url;
            navigator.clipboard.writeText(url).then(() => {
                M.toast({html: 'RSS-URL kopiert!'});
            });
        });
    });
});
</script>
{% endblock %}
