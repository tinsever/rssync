{% extends 'layout/base.twig' %}

{% block title %}Passwort vergessen - {{ app_name }}{% endblock %}

{% block content %}
<div class="row" style="margin-top: 3rem;">
    <div class="col s12 m6 offset-m3 l4 offset-l4">
        <div class="card">
            <div class="card-content">
                <span class="card-title center-align">Passwort vergessen</span>
                <p class="center-align grey-text" style="margin-bottom: 1.5rem;">
                    Geben Sie Ihre E-Mail-Adresse ein und wir senden Ihnen einen Link zum Zurücksetzen Ihres Passworts.
                </p>
                
                <form action="/forgot-password" method="POST">
                    <div class="input-field">
                        <i class="material-icons prefix">email</i>
                        <input type="email" id="email" name="email" required>
                        <label for="email">E-Mail</label>
                    </div>
                    
                    <div class="center-align" style="margin-top: 2rem;">
                        <button type="submit" class="btn btn-large waves-effect waves-light blue">
                            Link senden
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </form>
            </div>
            
            <div class="card-action center-align">
                <a href="/login">Zurück zum Login</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
