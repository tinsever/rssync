{% extends 'layout/base.twig' %}

{% block title %}Registrieren - {{ app_name }}{% endblock %}

{% block content %}
<div class="row" style="margin-top: 3rem;">
    <div class="col s12 m6 offset-m3 l4 offset-l4">
        <div class="card">
            <div class="card-content">
                <span class="card-title center-align">Konto erstellen</span>
                
                <form action="/register" method="POST">
                    <div class="input-field">
                        <i class="material-icons prefix">email</i>
                        <input type="email" id="email" name="email" required>
                        <label for="email">E-Mail</label>
                    </div>
                    
                    <div class="input-field">
                        <i class="material-icons prefix">lock</i>
                        <input type="password" id="password" name="password" minlength="8" required>
                        <label for="password">Passwort (min. 8 Zeichen)</label>
                    </div>
                    
                    <div class="input-field">
                        <i class="material-icons prefix">lock_outline</i>
                        <input type="password" id="password_confirm" name="password_confirm" required>
                        <label for="password_confirm">Passwort best√§tigen</label>
                    </div>
                    
                    <div class="center-align" style="margin-top: 2rem;">
                        <button type="submit" class="btn btn-large waves-effect waves-light blue">
                            Registrieren
                            <i class="material-icons right">person_add</i>
                        </button>
                    </div>
                </form>
            </div>
            
            <div class="card-action center-align">
                <span class="grey-text">Bereits registriert?</span>
                <a href="/login">Jetzt anmelden</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
