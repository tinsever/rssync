{% extends 'layout/base.twig' %}

{% block title %}Passwort zurücksetzen - {{ app_name }}{% endblock %}

{% block content %}
<div class="row" style="margin-top: 3rem;">
    <div class="col s12 m6 offset-m3 l4 offset-l4">
        <div class="card">
            <div class="card-content">
                <span class="card-title center-align">Neues Passwort setzen</span>
                
                <form action="/reset-password/{{ token }}" method="POST">
                    <div class="input-field">
                        <i class="material-icons prefix">lock</i>
                        <input type="password" id="password" name="password" minlength="8" required>
                        <label for="password">Neues Passwort (min. 8 Zeichen)</label>
                    </div>
                    
                    <div class="input-field">
                        <i class="material-icons prefix">lock_outline</i>
                        <input type="password" id="password_confirm" name="password_confirm" required>
                        <label for="password_confirm">Passwort bestätigen</label>
                    </div>
                    
                    <div class="center-align" style="margin-top: 2rem;">
                        <button type="submit" class="btn btn-large waves-effect waves-light blue">
                            Passwort ändern
                            <i class="material-icons right">check</i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
