{% extends 'layout/base.twig' %}

{% block title %}Login - {{ app_name }}{% endblock %}

{% block content %}
<div class="row" style="margin-top: 3rem;">
    <div class="col s12 m6 offset-m3 l4 offset-l4">
        <div class="card">
            <div class="card-content">
                <span class="card-title center-align">Anmelden</span>
                
                <p class="center-align grey-text">
                    Sie werden zu WorkOS weitergeleitet, um sich anzumelden.
                </p>
                
                <div class="center-align" style="margin-top: 2rem;">
                    <a href="/login" class="btn btn-large waves-effect waves-light blue">
                        Mit WorkOS anmelden
                        <i class="material-icons right">login</i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
