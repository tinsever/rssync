{% extends 'layout/dashboard.twig' %}

{% block title %}Dashboard - {{ app_name }}{% endblock %}

{% block dashboard_content %}
<h4>Willkommen zur√ºck!</h4>

<div class="row">
    <div class="col s12 m4">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text center-align">
                <i class="material-icons large">folder</i>
                <h3>{{ categoryCount }}</h3>
                <p>Eigene Kategorien</p>
            </div>
            <div class="card-action">
                <a href="{{ url_for('dashboard.categories') }}" class="white-text">Verwalten</a>
            </div>
        </div>
    </div>
    
    <div class="col s12 m4">
        <div class="card blue darken-1">
            <div class="card-content white-text center-align">
                <i class="material-icons large">rss_feed</i>
                <h3>{{ sourceCount }}</h3>
                <p>Eigene Quellen</p>
            </div>
            <div class="card-action">
                <a href="{{ url_for('dashboard.sources') }}" class="white-text">Verwalten</a>
            </div>
        </div>
    </div>
    
    <div class="col s12 m4">
        <div class="card teal darken-1">
            <div class="card-content white-text center-align">
                <i class="material-icons large">list</i>
                <h3>{{ listCount }}</h3>
                <p>Listen</p>
            </div>
            <div class="card-action">
                <a href="{{ url_for('dashboard.lists') }}" class="white-text">Verwalten</a>
            </div>
        </div>
    </div>
</div>

<div class="card" style="margin-top: 1rem;">
    <div class="card-content">
        <span class="card-title">Schnellstart</span>
        <div class="row" style="margin-top: 1rem;">
            <div class="col s12 m4">
                <a href="{{ url_for('dashboard.categories.create') }}" class="btn btn-large waves-effect waves-light blue" style="width: 100%;">
                    <i class="material-icons left">add</i>Kategorie
                </a>
            </div>
            <div class="col s12 m4">
                <a href="{{ url_for('dashboard.sources.create') }}" class="btn btn-large waves-effect waves-light blue" style="width: 100%;">
                    <i class="material-icons left">add</i>Quelle
                </a>
            </div>
            <div class="col s12 m4">
                <a href="{{ url_for('dashboard.lists.create') }}" class="btn btn-large waves-effect waves-light blue" style="width: 100%;">
                    <i class="material-icons left">add</i>Liste
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
