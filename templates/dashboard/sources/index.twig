{% extends 'layout/dashboard.twig' %}

{% block title %}Quellen - {{ app_name }}{% endblock %}

{% block dashboard_content %}
<div class="card">
    <div class="card-content">
        <div class="row valign-wrapper" style="margin-bottom: 0;">
            <div class="col s6">
                <span class="card-title">Meine RSS-Quellen</span>
            </div>
            <div class="col s6 right-align">
                <a href="{{ url_for('dashboard.sources.create') }}" class="btn waves-effect waves-light blue">
                    <i class="material-icons left">add</i>Neue Quelle
                </a>
            </div>
        </div>
        
        {% if sources is empty %}
            <p class="grey-text" style="margin-top: 2rem;">
                Noch keine Quellen vorhanden.
            </p>
        {% else %}
            <table class="striped responsive-table" style="margin-top: 1rem;">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Kategorie</th>
                        <th>Artikel</th>
                        <th>Letzter Abruf</th>
                        <th class="right-align">Aktionen</th>
                    </tr>
                </thead>
                <tbody>
                    {% for source in sources %}
                    <tr>
                        <td>{{ source.name }}</td>
                        <td>
                            <span class="chip">{{ source.category.name }}</span>
                        </td>
                        <td>{{ source.feed_items_count }}</td>
                        <td>
                            {% if source.last_refresh %}
                                {{ source.last_refresh|date('d.m.Y H:i') }}
                            {% else %}
                                <span class="grey-text">Nie</span>
                            {% endif %}
                        </td>
                        <td class="right-align">
                            <form action="{{ url_for('dashboard.sources.refresh', {id: source.id}) }}" method="POST" style="display: inline;">
                                <button type="submit" class="btn-flat btn-small waves-effect teal-text" title="Jetzt crawlen">
                                    <i class="material-icons">refresh</i>
                                </button>
                            </form>
                            <a href="{{ url_for('dashboard.sources.edit', {id: source.id}) }}" class="btn-flat btn-small waves-effect">
                                <i class="material-icons">edit</i>
                            </a>
                            <form action="{{ url_for('dashboard.sources.delete', {id: source.id}) }}" method="POST" style="display: inline;" onsubmit="return confirm('Quelle wirklich lÃ¶schen?');">
                                <button type="submit" class="btn-flat btn-small waves-effect red-text">
                                    <i class="material-icons">delete</i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
</div>
{% endblock %}
