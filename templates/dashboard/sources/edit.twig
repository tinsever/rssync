{% extends 'layout/dashboard.twig' %}

{% block title %}Quelle bearbeiten - {{ app_name }}{% endblock %}

{% block dashboard_content %}
<div class="card">
    <div class="card-content">
        <span class="card-title">Quelle bearbeiten</span>
        
        <form action="/dashboard/sources/{{ source.id }}" method="POST">
            <div class="row">
                <div class="input-field col s12 m6">
                    <i class="material-icons prefix">rss_feed</i>
                    <input type="text" id="name" name="name" value="{{ source.name }}" required>
                    <label for="name" class="active">Name</label>
                </div>
            </div>
            
            <div class="row">
                <div class="input-field col s12 m8">
                    <i class="material-icons prefix">link</i>
                    <input type="url" id="url" name="url" value="{{ source.url }}" required>
                    <label for="url" class="active">RSS-Feed URL</label>
                </div>
            </div>
            
            <div class="row">
                <div class="input-field col s12 m6">
                    <i class="material-icons prefix">folder</i>
                    <select name="category_id" id="category_id" required>
                        {% for category in categories %}
                            <option value="{{ category.id }}" {% if category.id == source.category_id %}selected{% endif %}>
                                {{ category.name }}
                                {% if category.user_id is null %}
                                    (Global)
                                {% endif %}
                            </option>
                        {% endfor %}
                    </select>
                    <label for="category_id">Kategorie</label>
                </div>
            </div>
            
            <div class="row">
                <div class="col s12">
                    <button type="submit" class="btn waves-effect waves-light blue">
                        <i class="material-icons left">save</i>Speichern
                    </button>
                    <a href="{{ url_for('dashboard.sources') }}" class="btn waves-effect waves-light grey">
                        Abbrechen
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}
