{% extends 'layout/dashboard.twig' %}

{% block title %}Neue Liste - {{ app_name }}{% endblock %}

{% block dashboard_content %}
<div class="card">
    <div class="card-content">
        <span class="card-title">Neue Liste erstellen</span>
        
        <form action="/dashboard/lists" method="POST">
            <div class="row">
                <div class="input-field col s12 m6">
                    <i class="material-icons prefix">list</i>
                    <input type="text" id="name" name="name" required>
                    <label for="name">Name der Liste</label>
                </div>
            </div>
            
            <div class="row">
                <div class="col s12">
                    <label>
                        <input type="checkbox" name="is_public" class="filled-in" checked>
                        <span>Öffentlich (Liste kann von anderen gesehen werden)</span>
                    </label>
                </div>
            </div>
            
            <div class="row" style="margin-top: 2rem;">
                <div class="col s12">
                    <button type="submit" class="btn waves-effect waves-light blue">
                        <i class="material-icons left">save</i>Erstellen & Quellen hinzufügen
                    </button>
                    <a href="{{ url_for('dashboard.lists') }}" class="btn waves-effect waves-light grey">
                        Abbrechen
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}
